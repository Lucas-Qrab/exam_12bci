<div class="row justify-content-center">
    {% for ville in villes %}
        <div class="col-sm-2">
            <div class="card">
                <div class="card-body">
                    <p class="card-text">
                        {{ ville.name }}
                        <br>
                        <a type="button" class="btn btn-outline-primary btn-sm mt-2" href="{{ path("ville", {nom: ville.name}) }}" role="button">Consulter</a>
                    </p>
                </div>
            </div>
        </div>
    {% endfor %}
</div>